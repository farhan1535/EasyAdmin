{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
{{ include('Layout/layout.html.twig') }}
<form action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" class="form-control" value="{{ csrf_token }}" />
    {% endif %}

    <label for="password">{{ 'security.login.password'|trans }}</label>
    <input type="password" id="password" class="form-control" name="_password" required="required" autocomplete="current-password" />

    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
    <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>

    <input type="submit" class="btn btn-info" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
</form>
